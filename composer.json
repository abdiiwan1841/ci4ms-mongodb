{
	"name": "codeigniter4/appstarter",
	"type": "project",
	"description": "CodeIgniter4 starter app",
	"homepage": "https://bertugfahriozer.com/blogDetail/sistemde-kimlik-dogrulama-auth",
	"license": "MIT",
	"require": {
		"php": "^7.3||^8.0",
		"codeigniter4/framework": "^4",
		"codeigniter4/translations": "^4.1",
		"almasaeed2010/adminlte": "^v3.1.0-rc",
		"mongodb/mongodb": "^1.8",
		"gregwar/captcha": "1.*",
		"phpmailer/phpmailer": "^6.4",
		"jasongrimes/paginator": "~1.0"
	},
	"require-dev": {
		"fakerphp/faker": "^1.9",
		"mikey179/vfsstream": "^1.6",
		"phpunit/phpunit": "^9.1",
		"lonnieezell/vulcan": "dev-develop"
	},
	"suggest": {
		"ext-fileinfo": "Improves mime type detection for files"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app",
			"Config\\": "app/Config"
		},
		"exclude-from-classmap": [
			"**/Database/Migrations/**"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"test": "phpunit"
	},
	"support": {
		"forum": "https://bertugfahriozer.com/",
		"source": "https://github.com/bertugfahriozer/auth-ci4-mongodb"
	}
}
